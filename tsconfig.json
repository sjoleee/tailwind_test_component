{
  "compilerOptions": {
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "target": "es2016",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true,
    "jsx": "react-jsx"
  },

  "include": ["src"]
}
